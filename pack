#!/bin/bash

# check if paru or yay installed
check-aur-helper() {
  if [ -f /bin/paru ]; then
    helper="paru"
  elif [ -f /bin/yay ]; then
    helper="yay"
  else
    echo "No AUR helper was found. Install yay or paru first."
    exit 1
  fi
}

pack-install() {
  fzf_args=(
    --multi
    --preview "echo 'alt-p: toggle description, alt-j/k: scroll, F11: maximize'; echo; ${helper} -Sii {1}"
    --preview-window 'right:60%:wrap'
    --bind 'alt-p:toggle-preview'
    --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
    --bind 'alt-k:preview-up,alt-j:preview-down'
  )

  pack_name=$(${helper} -Slq | fzf "${fzf_args[@]}" | tr '\n' ' ')

  if [[ -n $pack_name ]]; then
    ${helper} -S $pack_name
  fi
}

pack-uninstall() {
  fzf_args=(
    --multi
    --preview "echo 'alt-p: toggle description, alt-j/k: scroll, F11: maximize'; echo; ${helper} -Qi {1}"
    --preview-window 'right:60%:wrap'
    --bind 'alt-p:toggle-preview'
    --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
    --bind 'alt-k:preview-up,alt-j:preview-down'
  )

  pack_name=$(${helper} -Qqe | fzf "${fzf_args[@]}" | tr '\n' ' ')

  if [[ -n $pack_name ]]; then
    ${helper} -Rns $pack_name
  fi
}

pack-update() {
  echo -e "Updating system packages..."
  $helper -Syu
  echo
}

pack-clearcache() {
  $helper -Scc
  echo
}

pack-list-aur() {
  fzf_args=(
    --multi
    --preview "echo 'alt-p: toggle description, alt-j/k: scroll, F11: maximize'; echo; ${helper} -Qi {1}"
    --preview-window 'right:60%:wrap'
    --bind 'alt-p:toggle-preview'
    --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
    --bind 'alt-k:preview-up,alt-j:preview-down'
  )

  pack_name=$(${helper} -Qqm | fzf "${fzf_args[@]}" | tr '\n' ' ')

  if [[ -n $pack_name ]]; then
    ${helper} -Rns $pack_name
  fi
}

check-aur-helper

case $1 in

install)
  pack-install
  ;;
remove)
  pack-uninstall
  ;;
uninstall)
  pack-uninstall
  ;;
update)
  pack-update
  ;;
*)
  choice=$(printf "Install Packages\nRemove Packages\nUpdate System\nInstalled AUR Packages\nClear Cache\nExit" | fzf --cycle --no-info)
  case $choice in

  "Install Packages")
    pack-install
    ;;
  "Remove Packages")
    pack-uninstall
    ;;
  "Update System")
    pack-update
    ;;
  "Clear Cache")
    pack-clearcache
    ;;
  "Installed AUR Packages")
    pack-list-aur
    ;;
  "Exit")
    exit 0
    ;;
  *)
    exit 1
    ;;
  esac
  ;;
esac
